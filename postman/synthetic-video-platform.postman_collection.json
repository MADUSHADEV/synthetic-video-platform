{
  "info": {
    "name": "synthetic-video-platform",
    "description": "API collection for the AI Video Library microservices project - YouTube replica for AI-generated videos",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Identity Service",
      "description": "User authentication, registration, and account management endpoints",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('user_id', jsonData.data.id);",
                  "    pm.environment.set('user_email', jsonData.data.email);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/identity/register",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "identity",
                "register"
              ]
            },
            "description": "Register a new user account with email and password"
          },
          "response": []
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('auth_token', jsonData.data.token);",
                  "    pm.environment.set('user_id', jsonData.data.id);",
                  "    console.log('Token saved: ' + jsonData.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/identity/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "identity",
                "login"
              ]
            },
            "description": "Login with email and password to receive JWT authentication token"
          },
          "response": []
        },
        {
          "name": "Update User Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": {{user_id}},\n  \"firstName\": \"Jonathan\",\n  \"lastName\": \"Smith\",\n  \"email\": \"jonathan.smith@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/identity/editUser",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "identity",
                "editUser"
              ]
            },
            "description": "Update user profile information (requires JWT authentication)"
          },
          "response": []
        },
        {
          "name": "Change Password",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": {{user_id}},\n  \"email\": \"{{user_email}}\",\n  \"newPassword\": \"NewSecurePass456!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/identity/changePassword",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "identity",
                "changePassword"
              ]
            },
            "description": "Change user password (requires JWT authentication)"
          },
          "response": []
        },
        {
          "name": "Delete User Account",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": {{user_id}},\n  \"email\": \"{{user_email}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/identity/deleteUser",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "identity",
                "deleteUser"
              ]
            },
            "description": "Delete user account permanently"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_email",
      "value": "",
      "type": "string"
    }
  ]
}

